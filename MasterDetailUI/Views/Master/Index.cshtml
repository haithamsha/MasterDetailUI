@model IEnumerable<MasterDetailUI.Models.Master>

@{
    ViewData["Title"] = "Master Data Index";
}

<h1>Master Data</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Education Level</th>
            <th>Social Media Accounts</th>
            <th>Personal Web Site</th>
            <th>Years Of Experience</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EducationLevel</td>
                <td>@item.SocialMediaAccounts</td>
                <td>@item.PersonalWebSite</td>
                <td>@item.YearsOfExperience</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
